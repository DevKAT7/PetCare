@page "/appointments"
@using Microsoft.Extensions.Logging
@using PetCare.MobileApp.Enums
@using PetCare.MobileApp.Models.Appointments
@using PetCare.Shared.Dtos
@using PetCare.MobileApp.Services
@using PetCare.MobileApp.Models.Pets
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@attribute [Authorize]
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Appointments> Logger

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-2 bg-light rounded-3">
        <div class="row g-2 align-items-end">
            <div class="col-auto">
                <label class="form-label small mb-1">Pet</label>
                <select class="form-select form-select-sm" @bind="selectedPetId">
                    <option value="">All pets</option>
                    @foreach (var p in pets)
                    {
                        <option value="@p.PetId">@p.Name</option>
                    }
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label small mb-1">From</label>
                <InputDate class="form-control form-control-sm" TValue="DateTime?" @bind-Value="selectedFrom" />
            </div>

            <div class="col-auto">
                <label class="form-label small mb-1">To</label>
                <InputDate class="form-control form-control-sm" TValue="DateTime?" @bind-Value="selectedTo" />
            </div>

            <div class="col-auto">
                <label class="form-label small mb-1">Status</label>
                <select class="form-select form-select-sm" @bind="selectedStatusString">
                    <option value="">All</option>
                    @foreach (var s in Enum.GetValues(typeof(AppointmentStatus)).Cast<AppointmentStatus>())
                    {
                        <option value="@s">@s</option>
                    }
                </select>
            </div>

            <div class="col-auto">
                <button class="btn btn-primary btn-sm me-2" @onclick="ApplyFilters">Apply</button>
                <button class="btn btn-link btn-sm text-decoration-none" @onclick="ClearFilters">Clear</button>
            </div>
        </div>
    </div>
</div>

<div class="details-page pb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0 fw-bold">My Visits</h4>
        <button class="btn btn-primary btn-sm rounded-circle shadow-sm d-flex align-items-center justify-content-center"
                style="width: 40px; height: 40px;" @onclick="GoToBookAppointment">
            <i class="bi bi-plus-lg fs-5"></i>
        </button>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-1 bg-light rounded-3">
            <ul class="nav nav-pills nav-fill">
                <li class="nav-item">
                    <button class="nav-link fw-bold small py-2 @(activeTab == "upcoming" ? "active bg-white text-primary shadow-sm" : "text-muted")"
                            @onclick="@(() => SwitchTab("upcoming"))">
                        Upcoming
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-bold small py-2 @(activeTab == "history" ? "active bg-white text-primary shadow-sm" : "text-muted")"
                            @onclick="@(() => SwitchTab("history"))">
                        History
                    </button>
                </li>
            </ul>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (appointments != null && appointments.Any())
    {
        <div class="d-flex flex-column gap-1">
            @foreach (var app in appointments)
            {
                <div class="card-custom @GetBorderClass(app.Status)" @onclick="() => GoToDetails(app.AppointmentId)">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="badge @GetStatusBadgeClass(app.Status)">@app.Status</span>
                        <small class="text-muted fw-bold">@app.AppointmentDateTime.ToString("dd MMM yyyy")</small>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="me-3 text-center" style="min-width: 50px;">
                            <div class="fs-4 fw-bold text-dark">@app.AppointmentDateTime.ToString("HH:mm")</div>
                        </div>

                        <div class="border-start ps-3">
                            <h6 class="fw-bold mb-1">@app.PetName</h6>
                            <div class="small text-muted mb-1">
                                <i class="bi bi-person-badge me-1"></i> Dr. @app.VetName
                            </div>
                            <div class="small text-secondary text-truncate" style="max-width: 200px;">
                                @app.ReasonForVisit
                            </div>
                        </div>

                        <div class="ms-auto text-muted">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (hasNextPage)
        {
            <div class="text-center mt-3">
                <button class="btn btn-link text-decoration-none" @onclick="LoadMore" disabled="@isLoadingMore">
                    @if (isLoadingMore)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {

                        <span>Load older visits</span>
                    }
                </button>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-calendar-x display-1 opacity-25"></i>
            <p class="mt-3">No appointments found in this list.</p>
            @if (activeTab == "upcoming")
            {
                <button class="btn btn-outline-primary mt-2" @onclick="GoToBookAppointment">
                    Book an Appointment
                </button>
            }
        </div>
    }
</div>

@code {
    private List<AppointmentReadModel> appointments = new();
    private List<PetReadModel> pets = new();
    private string activeTab = "upcoming";
    private bool isLoading = true;
    private bool isLoadingMore = false;
    private int currentPage = 1;
    private bool hasNextPage = false;
    private int ownerId;

    private int? selectedPetId;
    private DateTime? selectedFrom;
    private DateTime? selectedTo;
    private string? selectedStatusString;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var claim = user.FindFirst("PetOwnerId");

            if (claim != null && int.TryParse(claim.Value, out int id))
            {
                ownerId = id;
                try
                {
                    pets = await ApiService.GetPetsAsync(ownerId);
                }
                catch (Exception ex)
                {
                    Logger.LogWarning(ex, "Failed to load pets for filter");
                    pets = new List<PetReadModel>();
                }

                await LoadAppointments();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing appointments");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SwitchTab(string tab)
    {
        if (activeTab == tab) return;

        activeTab = tab;
        appointments.Clear();
        currentPage = 1;
        isLoading = true;
        await LoadAppointments();
        isLoading = false;
    }

    private async Task LoadAppointments()
    {
        try
        {
            bool upcoming = activeTab == "upcoming";
            var from = selectedFrom;
            var to = selectedTo;
            AppointmentStatus? status = null;

            if (!string.IsNullOrWhiteSpace(selectedStatusString) 
                && Enum.TryParse<AppointmentStatus>(selectedStatusString, out var parsed))
            {
                status = parsed;
            }

            var result = await ApiService.GetMyAppointmentsAsync(ownerId, upcoming, currentPage, pageSize: 10,
                petId: selectedPetId, from: from, to: to, status: status);

            if (currentPage == 1)
            {
                appointments = result.Items;
            }
            else
            {
                if (result.Items != null)
                {
                    appointments.AddRange(result.Items);
                }
            }

            hasNextPage = result.TotalPages > currentPage;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load appointments");
        }
    }

    private async Task LoadMore()
    {
        isLoadingMore = true;
        currentPage++;
        await LoadAppointments();
        isLoadingMore = false;
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        appointments.Clear();
        isLoading = true;
        await LoadAppointments();
        isLoading = false;
    }

    private async Task ClearFilters()
    {
        selectedPetId = null;
        selectedFrom = null;
        selectedTo = null;
        selectedStatusString = null;
        await ApplyFilters();
    }

    private void GoToDetails(int id)
    {
        Navigation.NavigateTo($"/appointments/{id}");
    }

    private void GoToBookAppointment()
    {
        Navigation.NavigateTo("/appointments/book");
    }

    private string GetBorderClass(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Scheduled => "border-scheduled",
            AppointmentStatus.Confirmed => "border-confirmed",
            AppointmentStatus.Completed => "border-completed",
            AppointmentStatus.Cancelled => "border-cancelled",
            AppointmentStatus.NoShow => "border-noshow",
            _ => ""
        };
    }

    private string GetStatusBadgeClass(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Scheduled => "badge-scheduled",
            AppointmentStatus.Confirmed => "bg-success-subtle text-success",
            AppointmentStatus.Completed => "bg-secondary-subtle text-secondary",
            AppointmentStatus.Cancelled => "bg-danger-subtle text-danger",
            AppointmentStatus.NoShow => "bg-dark-subtle text-dark",
            _ => "bg-light text-dark"
        };
    }
}
