@page "/clinic-offer"
@using PetCare.MobileApp.Models
@using PetCare.MobileApp.Models.Vets
@using PetCare.MobileApp.Services
@using Microsoft.Extensions.Logging
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject TextService Text
@inject ILogger<ClinicOffer> Logger

<div class="container pb-5">
    <div class="d-flex align-items-center mb-4 mt-2">
        <button class="btn btn-link text-dark p-0 me-3" @onclick='() => Navigation.NavigateTo("/")'>
            <i class="bi bi-arrow-left fs-3"></i>
        </button>
        <h4 class="fw-bold mb-0">Our Clinic</h4>
    </div>

    <div class="nav nav-pills custom-pills mb-4" role="tablist">
        <button class="nav-link @(activeTab == 1 ? "active" : "")" @onclick="() => activeTab = 1">About</button>
        <button class="nav-link @(activeTab == 2 ? "active" : "")" @onclick="() => activeTab = 2">Team</button>
        <button class="nav-link @(activeTab == 3 ? "active" : "")" @onclick="() => activeTab = 3">Services</button>
    </div>

    @if (activeTab == 1)
    {
        <div class="animate-fade-in">
            <div class="card border-0 shadow-sm mb-3 overflow-hidden" style="border-radius: 20px;">
                <div class="position-relative">
                    <img src="images/clinic-photo.jpg" class="card-img-top" style="height: 220px; object-fit: cover;" alt="Clinic">
                    <div class="position-absolute bottom-0 start-0 w-100 h-50 bg-gradient-fade"></div>
                </div>

                <div class="card-body p-4">
                    <h4 class="fw-bold text-dark mb-2">PetCare Center</h4>
                    <p class="text-muted small mb-4" style="line-height: 1.6;">
                        We provide high-quality veterinary care with a personal touch.
                        Our clinic is equipped with state-of-the-art technology to ensure the best for your pets.
                    </p>

                    <div class="info-row mb-3">
                        <div class="icon-box bg-danger-subtle text-danger">
                            <i class="bi bi-geo-alt-fill fs-5"></i>
                        </div>
                        <div>
                            <span class="d-block fw-bold small text-dark">Address</span>
                            <span class="small text-muted">@Text["Clinic_Address"]</span>
                        </div>
                    </div>

                    <div class="info-row mb-3">
                        <div class="icon-box bg-success-subtle text-success">
                            <i class="bi bi-telephone-fill fs-5"></i>
                        </div>
                        <div>
                            <span class="d-block fw-bold small text-dark">Phone</span>
                            <span class="small text-muted">@Text["Clinic_Phone"]</span>
                        </div>
                    </div>

                    <div class="info-row mb-3">
                        <div class="icon-box bg-warning-subtle text-warning">
                            <i class="bi bi-envelope-fill fs-5"></i>
                        </div>
                        <div>
                            <span class="d-block fw-bold small text-dark">Email</span>
                            <span class="small text-muted">@Text["Clinic_Email"]</span>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="icon-box bg-primary-subtle text-primary">
                            <i class="bi bi-clock-fill fs-5"></i>
                        </div>
                        <div>
                            <span class="d-block fw-bold small text-dark">Opening Hours</span>
                            <span class="small text-muted">@Text["Opening_Hours"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (activeTab == 2)
    {
        <div class="animate-fade-in pb-3">
            @if (isLoadingVets)
            {
                <div class="d-flex justify-content-center align-items-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var vet in vets)
                    {
                        <div class="col-6">
                            <div class="card border-0 shadow-sm h-100 text-center p-3 cursor-pointer vet-card"
                                 @onclick="() => GoToVetDetails(vet.VetId)">

                                <div class="mx-auto mb-3 rounded-circle bg-light d-flex align-items-center justify-content-center overflow-hidden position-relative shadow-sm"
                                     style="width: 85px; height: 85px; border: 3px solid white;">
                                    @if (!string.IsNullOrEmpty(vet.ProfilePictureUrl))
                                    {
                                        <img src="@vet.ProfilePictureUrl" alt="@vet.FullName" style="width:100%; height:100%; object-fit:cover;">
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-fill fs-1 text-secondary opacity-50"></i>
                                    }
                                </div>

                                <h6 class="fw-bold mb-1 text-dark">@vet.FullName</h6>

                                <div class="mb-3" style="min-height: 25px;">
                                    <span class="badge bg-primary-subtle text-primary rounded-pill x-small text-truncate w-100">
                                        @if (vet.Specializations != null && vet.Specializations.Any())
                                        {
                                            @string.Join(", ", vet.Specializations)
                                        }
                                        else
                                        {
                                            <span>Veterinarian</span>
                                        }
                                    </span>
                                </div>

                                <button class="btn btn-sm btn-light w-100 mt-auto rounded-pill fw-bold text-primary" style="font-size: 0.75rem;">
                                    View Profile
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }

    @if (activeTab == 3)
    {
        <div class="animate-fade-in">
            @if (isLoadingProcedures)
            {
                <div class="d-flex justify-content-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else if (groupedProcedures != null && groupedProcedures.Any())
            {
                <div class="accordion-container d-flex flex-column gap-3">
                    @foreach (var group in groupedProcedures)
                    {
                        var specName = group.Key;
                        var style = GetSpecializationStyle(specName);
                        var isExpanded = _expandedGroups.Contains(specName);

                        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

                            <button class="card-header border-0 bg-white p-3 d-flex align-items-center justify-content-between w-100 text-start"
                                    @onclick="() => ToggleGroup(specName)"
                                    style="cursor: pointer;">

                                <div class="d-flex align-items-center">
                                    <div class="icon-box me-3 @style.BgClass @style.TextClass">
                                        <i class="bi @style.Icon fs-5"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold text-dark">@specName</h6>
                                        <small class="text-muted">@group.Count() procedures</small>
                                    </div>
                                </div>

                                <i class="bi bi-chevron-down text-muted transition-icon @(isExpanded ? "rotate-180" : "")"></i>
                            </button>

                            @if (isExpanded)
                            {
                                <div class="list-group list-group-flush border-top border-light animate-slide-down">
                                    @foreach (var procedure in group)
                                    {
                                        <div class="list-group-item p-3 border-light border-0">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="pe-2">
                                                    <div class="fw-bold text-dark" style="font-size: 0.95rem;">@procedure.Name</div>
                                                    @if (!string.IsNullOrEmpty(procedure.Description))
                                                    {
                                                        <small class="text-muted d-block text-truncate" style="max-width: 200px;">
                                                            @procedure.Description
                                                        </small>
                                                    }
                                                </div>
                                                <span class="fw-bold text-primary text-nowrap">
                                                    @procedure.Price.ToString("C0")
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <small class="text-muted opacity-75">* Final price may vary depending on pet condition and size.</small>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-clipboard-x display-1 opacity-25"></i>
                    <p class="mt-3">No services available at the moment.</p>
                </div>
            }
        </div>
    }
</div>

@code {
    private int activeTab = 1;
    private bool isLoadingVets = false;
    private bool isLoadingProcedures = false;

    private List<VetReadModel> vets = new();
    private List<ProcedureReadModel> procedures = new();

    private IEnumerable<IGrouping<string, ProcedureReadModel>> groupedProcedures;
    private HashSet<string> _expandedGroups = new();

    protected override async Task OnInitializedAsync()
    {
        var t1 = LoadVets();
        var t2 = LoadProcedures();
        await Task.WhenAll(t1, t2);
    }

    private async Task LoadVets()
    {
        isLoadingVets = true;
        try
        {
            vets = await ApiService.GetVetsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError($"Error: {ex.Message}");
        }
        finally
        {
            isLoadingVets = false;
        }
    }

    private async Task LoadProcedures()
    {
        isLoadingProcedures = true;
        try
        {
            procedures = await ApiService.GetProceduresAsync();

            groupedProcedures = procedures.GroupBy(p => p.VetSpecializationName);

            if (groupedProcedures.Any())
            {
                _expandedGroups.Add(groupedProcedures.First().Key);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError($"Error: {ex.Message}");
        }
        finally
        {
            isLoadingProcedures = false;
        }
    }

    private void ToggleGroup(string specName)
    {
        if (_expandedGroups.Contains(specName))
            _expandedGroups.Remove(specName);
        else
            _expandedGroups.Add(specName);
    }

    private void GoToVetDetails(int vetId)
    {
        Navigation.NavigateTo($"/vet-details/{vetId}");
    }

    private (string Icon, string BgClass, string TextClass) GetSpecializationStyle(string specializationName)
    {
        var name = specializationName?.ToLower() ?? "";

        if (name.Contains("surg") || name.Contains("operat") || name.Contains("anesth"))
        {
            return ("bi-activity", "bg-danger-subtle", "text-danger");
        }

        if (name.Contains("cardio") || name.Contains("heart"))
        {
            return ("bi-heart-pulse", "bg-danger-subtle", "text-danger");
        }

        if (name.Contains("derm") || name.Contains("skin"))
        {
            return ("bi-bandaid", "bg-warning-subtle", "text-warning");
        }

        if (name.Contains("ophth") || name.Contains("eye"))
        {
            return ("bi-eye", "bg-info-subtle", "text-info");
        }

        if (name.Contains("ortho") || name.Contains("bone"))
        {
            return ("bi-person-standing", "bg-success-subtle", "text-success");
        }

        if (name.Contains("radio") || name.Contains("x-ray") || name.Contains("imag"))
        {
            return ("bi-prescription", "bg-secondary-subtle", "text-secondary");
        }

        if (name.Contains("onco") || name.Contains("cancer"))
        {
            return ("bi-bookmark-heart", "bg-primary-subtle", "text-primary");
        }

        if (name.Contains("neuro") || name.Contains("brain"))
        {
            return ("bi-cpu", "bg-dark-subtle", "text-dark");
        }

        if (name.Contains("intern") || name.Contains("general") || name.Contains("practitioner") || name.Contains("consult"))
        {
            return ("bi-journal-medical", "bg-primary-subtle", "text-primary");
        }

        return ("bi-clipboard2-pulse", "bg-light", "text-dark");
    }
}