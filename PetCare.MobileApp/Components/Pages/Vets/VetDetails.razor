@page "/vet-details/{vetId:int}"
@using PetCare.MobileApp.Models.Vets
@using System.Globalization
@using PetCare.MobileApp.Services
@inject IApiService ApiService
@inject NavigationManager Navigation

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center vh-50 mt-5">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else
{
    <div class="page-container" style="min-height: 100vh; background-color: #f8f9fa; padding-bottom: 100px;">

        <div class="px-4 pt-4 pb-2 d-flex justify-content-between align-items-center">
            <button class="btn btn-white text-dark shadow-sm rounded-circle p-0 d-flex align-items-center justify-content-center"
                    style="width: 40px; height: 40px;"
                    @onclick="GoBack">
                <i class="bi bi-arrow-left fs-5"></i>
            </button>
            <h5 class="mb-0 fw-bold">Doctor Profile</h5>
            <div style="width: 40px;"></div>
        </div>

        @if (vet != null)
        {
            <div class="text-center mt-3 mb-4 px-4">
                <div class="d-flex justify-content-center mb-3">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(vet.ProfilePictureUrl))
                        {
                            <img src="@vet.ProfilePictureUrl" class="profile-img shadow" />
                        }
                        else
                        {
                            <div class="profile-placeholder shadow">
                                <i class="bi bi-person-fill"></i>
                            </div>
                        }
                        <div class="position-absolute bottom-0 end-0 bg-success text-white rounded-circle border border-2 border-white d-flex align-items-center justify-content-center"
                             style="width: 32px; height: 32px;">
                            <i class="bi bi-check-lg small"></i>
                        </div>
                    </div>
                </div>

                <h3 class="fw-bold mb-1 text-dark">@vet.FullName</h3>

                <div class="mb-3">
                    @if (vet.Specializations != null && vet.Specializations.Any())
                    {
                        <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 fw-medium">
                            @string.Join(", ", vet.Specializations)
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-light text-muted rounded-pill px-3 py-2">Veterinarian</span>
                    }
                </div>

                <div class="d-flex justify-content-center gap-3">
                    <div class="stat-card bg-white shadow-sm rounded-4 p-2 px-3 text-center" style="min-width: 100px;">
                        <small class="text-muted d-block text-uppercase x-small fw-bold">Experience</small>
                        <span class="fw-bold text-dark">
                            @if (vet.YearsOfExperience == 0)
                            {
                                <span>&lt;1 Year</span>
                            }
                            else
                            {
                                <span>@vet.YearsOfExperience Years</span>
                            }
                        </span>
                    </div>
                    <div class="stat-card bg-white shadow-sm rounded-4 p-2 px-3 text-center" style="min-width: 100px;">
                        <small class="text-muted d-block text-uppercase x-small fw-bold">Rating</small>
                        <span class="fw-bold text-warning">
                            <i class="bi bi-star-fill me-1"></i>4.9
                        </span>
                    </div>
                </div>
            </div>

            <div class="px-4">

                <div class="card border-0 shadow-sm rounded-4 mb-3 bg-white">
                    <div class="card-body p-4">
                        <h6 class="fw-bold mb-3 d-flex align-items-center">
                            <i class="bi bi-info-circle-fill text-primary me-2 opacity-50"></i> About Doctor
                        </h6>
                        <p class="text-muted small mb-0" style="line-height: 1.6; text-align: justify;">
                            @(string.IsNullOrEmpty(vet.Description) ? "No description provided." : vet.Description)
                        </p>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-3 bg-white">
                    <div class="card-body p-4">
                        <h6 class="fw-bold mb-3 d-flex align-items-center">
                            <i class="bi bi-calendar-week-fill text-success me-2 opacity-50"></i> Working Schedule
                        </h6>

                        @if (schedules != null && schedules.Any())
                        {
                            <div class="vstack gap-2">
                                @foreach (var dayGroup in GroupSchedules(schedules))
                                {
                                    <div class="d-flex justify-content-between align-items-center p-2 rounded bg-light">
                                        <span class="fw-bold small text-dark ps-2">@dayGroup.Key</span>
                                        <span class="badge bg-white text-dark shadow-sm border">@dayGroup.Value</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3 text-muted small">
                                <i class="bi bi-calendar-x fs-4 d-block mb-1 opacity-50"></i>
                                No schedule available
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="fixed-bottom p-3 bg-white border-top shadow-lg" style="border-radius: 20px 20px 0 0;">
                <button class="btn btn-primary w-100 py-3 rounded-4 fw-bold shadow-sm d-flex align-items-center justify-content-center pulse-on-hover"
                        @onclick="BookAppointment">
                    <i class="bi bi-calendar-check-fill me-2 fs-5"></i>
                    Book Appointment
                </button>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public int vetId { get; set; }

    private VetReadModel? vet;
    private List<VetScheduleReadModel> schedules = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            var vetTask = ApiService.GetVetDetailsAsync(vetId);
            var scheduleTask = ApiService.GetVetScheduleAsync(vetId);

            await Task.WhenAll(vetTask, scheduleTask);

            vet = await vetTask;
            schedules = await scheduleTask;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading vet details: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack() => Navigation.NavigateTo("/clinic-offer");

    private void BookAppointment()
    {
        Navigation.NavigateTo($"/appointments/book?preselectedVetId={vetId}");
    }

    private Dictionary<string, string> GroupSchedules(List<VetScheduleReadModel> list)
    {
        var sorted = list.OrderBy(x => x.DayOfWeek == DayOfWeek.Sunday ? 7 : (int)x.DayOfWeek).ToList();
        var result = new Dictionary<string, string>();

        foreach (var item in sorted)
        {
            string dayName = item.DayOfWeek.ToString();
            string hours = $"{item.StartTime:HH:mm} - {item.EndTime:HH:mm}";

            if (result.ContainsKey(dayName))
                result[dayName] += $", {hours}";
            else
                result.Add(dayName, hours);
        }
        return result;
    }
}