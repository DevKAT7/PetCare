@page "/profile/edit"
@using PetCare.Shared.Dtos
@using PetCare.MobileApp.Services
@inject IApiService ApiService
@inject NavigationManager Navigation

<div class="container mt-4 mb-5">
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-link text-dark p-0 me-3" @onclick='() => Navigation.NavigateTo("/profile")'>
            <i class="bi bi-arrow-left fs-3"></i>
        </button>
        <h4 class="mb-0 fw-bold">Edit Profile</h4>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else
    {
        <EditForm Model="@editModel" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mb-3">@errorMessage</div>
            }

            <div class="mb-3">
                <label class="form-label text-muted small fw-bold text-uppercase">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope text-muted"></i></span>
                    <input type="text" class="form-control bg-light border-start-0" value="@readOnlyEmail" disabled readonly />
                </div>
                <div class="form-text small">Email cannot be changed.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">First Name</label>
                <InputText class="form-control" @bind-Value="editModel.FirstName" placeholder="John" />
                <ValidationMessage For="@(() => editModel.FirstName)" class="text-danger small"/>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Last Name</label>
                <InputText class="form-control" @bind-Value="editModel.LastName" placeholder="Doe" />
                <ValidationMessage For="@(() => editModel.LastName)" class="text-danger small"/>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Phone Number</label>
                <InputText class="form-control" @bind-Value="editModel.PhoneNumber" placeholder="123 456 789" />
                <ValidationMessage For="@(() => editModel.PhoneNumber)" class="text-danger small"/>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Address</label>
                <InputTextArea class="form-control" @bind-Value="editModel.Address" rows="2" placeholder="Street, City, Zip" />
                <ValidationMessage For="@(() => editModel.Address)" class="text-danger small"/>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span> <span>Saving...</span>
                        }
                else
                {
                    <span>Save Changes</span>
                }
            </button>
        </EditForm>
    }
</div>

@code {
    private EditProfileDto editModel = new();
    private string readOnlyEmail = "";

    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        var profile = await ApiService.GetProfileAsync();

        if (profile != null)
        {
            readOnlyEmail = profile.Email;

            editModel = new EditProfileDto
            {
                FirstName = profile.FirstName,
                LastName = profile.LastName,
                PhoneNumber = profile.PhoneNumber,
                Address = profile.Address
            };
        }
        else
        {
            errorMessage = "Could not load profile data.";
        }

        isLoading = false;
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        var success = await ApiService.UpdateProfileAsync(editModel);

        isSaving = false;

        if (success)
        {
            Navigation.NavigateTo("/profile");
        }
        else
        {
            errorMessage = "Failed to update profile. Please try again.";
        }
    }
}