@page "/profile"
@using PetCare.MobileApp.Auth
@using PetCare.MobileApp.Services
@using PetCare.Shared.Dtos
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IApiService ApiService
@attribute [Authorize]

<div class="d-flex flex-column align-items-center mt-4 mb-4">
    <div class="profile-avatar mb-3 shadow-sm">
        <i class="bi bi-person-fill"></i>
    </div>

    @if (userProfile != null)
    {
        <h3 class="fw-bold mb-0">@userProfile.FirstName @userProfile.LastName</h3>
        <p class="text-muted">@userProfile.Email</p>

        <div class="d-flex gap-2 mt-2">
            <span class="badge bg-primary-subtle text-primary rounded-pill px-3">
                @userProfile.Role
            </span>
        </div>
    }
    else if (isLoading)
    {
        <div class="spinner-border text-primary" role="status"></div>
    }
</div>

<div class="list-group shadow-sm mx-3 rounded-4 overflow-hidden border-0">

    <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 border-0 border-bottom"
            @onclick='() => Navigation.NavigateTo("/profile/edit")'>
        <div class="d-flex align-items-center">
            <div class="icon-box bg-light text-dark me-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-person-gear"></i>
            </div>
            <span class="fw-medium">Edit Personal Details</span>
        </div>
        <i class="bi bi-chevron-right text-muted small"></i>
    </button>

    <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 border-0 border-bottom"
            @onclick='() => Navigation.NavigateTo("/change-password")'>
        <div class="d-flex align-items-center">
            <div class="icon-box bg-light text-dark me-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-shield-lock"></i>
            </div>
            <span class="fw-medium">Change Password</span>
        </div>
        <i class="bi bi-chevron-right text-muted small"></i>
    </button>

    <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 border-0 text-danger"
            @onclick="Logout">
        <div class="d-flex align-items-center">
            <div class="icon-box bg-danger-subtle text-danger me-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-box-arrow-right"></i>
            </div>
            <span class="fw-bold">Log Out</span>
        </div>
    </button>
</div>

<style>
    .profile-avatar {
        width: 100px;
        height: 100px;
        background-color: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        color: var(--petcare-primary);
    }
</style>

@code {
    private UserProfileDto? userProfile;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            userProfile = await ApiService.GetProfileAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task Logout()
    {
        SecureStorage.Remove("auth_token");
        if (AuthStateProvider is CustomAuthStateProvider customProvider)
        {
            customProvider.MarkUserAsLoggedOut();
        }
        Navigation.NavigateTo("/login");
    }
}
