@page "/change-password"
@using PetCare.MobileApp.Services
@using PetCare.Shared.Dtos
@inject IApiService ApiService
@inject NavigationManager Navigation

<div class="container mt-4 mb-5">
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-link text-dark p-0 me-3" @onclick='() => Navigation.NavigateTo("/profile")'>
            <i class="bi bi-arrow-left fs-3"></i>
        </button>
        <h4 class="mb-0 fw-bold">Change Password</h4>
    </div>

    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mb-3 d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>@errorMessage</div>
            </div>
        }

        @if (success)
        {
            <div class="alert alert-success mb-3 d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-2"></i>
                <div>Password changed successfully!</div>
            </div>
        }

        <div class="mb-3">
            <label class="form-label fw-bold">Current Password</label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0"><i class="bi bi-key"></i></span>
                <InputText type="password" class="form-control border-start-0" @bind-Value="model.CurrentPassword" placeholder="•••••••" />
            </div>
            <ValidationMessage For="@(() => model.CurrentPassword)" class="text-danger small"/>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">New Password</label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                <InputText type="password" class="form-control border-start-0" @bind-Value="model.NewPassword" placeholder="•••••••" />
            </div>
            <ValidationMessage For="@(() => model.NewPassword)" class="text-danger small"/>
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Confirm New Password</label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock-fill"></i></span>
                <InputText type="password" class="form-control border-start-0" @bind-Value="model.ConfirmNewPassword" placeholder="•••••••" />
            </div>
            <ValidationMessage For="@(() => model.ConfirmNewPassword)" class="text-danger small"/>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm" disabled="@isBusy">
            @if (isBusy)
            {
                <span class="spinner-border spinner-border-sm me-2"></span> <span>Updating...</span>
            }
            else
            {
                <span>Update Password</span>
            }
        </button>
    </EditForm>
</div>

@code {
    private ChangePasswordDto model = new();
    private bool isBusy = false;
    private bool success = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isBusy = true;
        errorMessage = null;
        success = false;

        var result = await ApiService.ChangePasswordAsync(model);

        if (result)
        {
            success = true;
            model = new();
        }
        else
        {
            errorMessage = "Failed to change password. Please check your current password.";
        }

        isBusy = false;
    }
}