@page "{id:int}"
@model PetCare.WebApp.Pages.Appointments.DetailsModel
@using PetCare.Core.Enums
@{
    ViewData["Title"] = "Visit Summary";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Appointment Details</h2>
            <span class="text-muted">@Model.Appointment.AppointmentDateTime.ToString("dd MMMM yyyy, HH:mm")</span>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-page="EditAppointment" asp-route-id="@Model.Appointment.AppointmentId" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm mb-3 border-0">
                <div class="card-body text-center pt-4">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.Appointment.PetImageUrl))
                        {
                            <img src="@Model.Appointment.PetImageUrl"
                                 alt="@Model.Appointment.PetName"
                                 class="rounded-circle shadow-sm border"
                                 style="width: 80px; height: 80px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center text-primary border"
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                <i class="bi bi-emoji-smile"></i>
                            </div>
                        }
                    </div>
                    <h4 class="card-title mb-1">@Model.Appointment.PetName</h4>
                    <p class="text-muted mb-3">@Model.Appointment.PetSpecies</p>

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <span class="badge bg-secondary px-3 py-2 rounded-pill">@Model.Appointment.Status</span>
                    </div>

                    <hr />
                    <div class="text-start">
                        <small class="text-muted text-uppercase fw-bold">Owner</small>
                        <div class="d-flex align-items-center mt-1">
                            <div class="bg-light rounded-circle p-2 me-2"><i class="bi bi-person"></i></div>
                            <div>
                                <div class="fw-bold">@Model.Appointment.OwnerName</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 text-primary"><i class="bi bi-file-medical me-2"></i>Medical Record</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small fw-bold text-uppercase">Reason</label>
                        <p class="fw-medium">@Model.Appointment.ReasonForVisit</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Appointment.Diagnosis))
                    {
                        <div class="alert alert-light border-start border-4 border-info shadow-sm">
                            <h6 class="text-info fw-bold"><i class="bi bi-activity me-2"></i>Diagnosis</h6>
                            @Model.Appointment.Diagnosis
                        </div>
                    }
                    <div class="mb-3">
                        <label class="text-muted small fw-bold text-uppercase">Doctor's Notes</label>
                        <p class="text-secondary">@Model.Appointment.Notes</p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary"><i class="bi bi-capsule me-2"></i>Prescriptions</h5>

                    <a asp-page="/Prescriptions/CreatePrescription" asp-route-appointmentId="@Model.Appointment.AppointmentId" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg"></i> Issue New Prescription
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.Prescriptions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Drug</th>
                                        <th>Dosage</th>
                                        <th>Details</th>
                                        <th class="text-end pe-4">Export / Print</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rx in Model.Prescriptions)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <span class="fw-bold text-dark">@rx.MedicationName</span>
                                            </td>
                                            <td>@rx.Dosage</td>
                                            <td><small class="text-muted">@rx.Dosage, @rx.Frequency</small></td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group">
                                                    <div class="dropdown d-inline-block">
                                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <i class="bi bi-file-word"></i> Word
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a class="dropdown-item"
                                                                   asp-page-handler="DownloadPrescription"
                                                                   asp-route-prescriptionId="@rx.PrescriptionId"
                                                                   asp-route-format="with_logo_word">
                                                                    With Logo
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item"
                                                                   asp-page-handler="DownloadPrescription"
                                                                   asp-route-prescriptionId="@rx.PrescriptionId"
                                                                   asp-route-format="simple_word">
                                                                    Simple
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>

                                                    <a asp-page-handler="DownloadPrescription"
                                                       asp-route-prescriptionId="@rx.PrescriptionId"
                                                       asp-route-format="standard_pdf"
                                                       class="btn btn-sm btn-outline-secondary"
                                                       title="Download PDF">
                                                        <i class="bi bi-file-pdf"></i>
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <p class="mb-0">No prescriptions issued yet.</p>
                            <small>Click the button above to create one.</small>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-0 opacity-75">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 text-secondary fs-6 text-uppercase"><i class="bi bi-list-check me-2"></i>Services Provided</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-sm align-middle mb-0">
                        <tbody>
                            @foreach (var proc in Model.Appointment.Procedures)
                            {
                                <tr>
                                    <td class="ps-4 border-0">@proc.ProcedureName</td>
                                    <td class="text-end pe-4 border-0 fw-bold">@proc.FinalPrice.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td class="ps-4 fw-bold">Total</td>
                                <td class="text-end pe-4 fw-bold">@Model.Appointment.Procedures.Sum(x => x.FinalPrice).ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        //alert (Toast) po wystawieniu recepty
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                var msg = '@TempData["SuccessMessage"]';

                var alertHtml = `
                    <div class="alert alert-success alert-dismissible fade show fixed-top m-3 shadow" role="alert" 
                        style="z-index: 1050; max-width: 500px; left: 50%; transform: translateX(-50%);">
                        <strong><i class="bi bi-check-circle-fill me-2"></i>Success!</strong> ${msg}
                        <hr>
                        <p class="mb-0 small">Find the prescription in the list below and click the download icon.</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                document.body.insertAdjacentHTML('afterbegin', alertHtml);

                setTimeout(function() {
                    var alert = document.querySelector('.alert');
                    if(alert) {
                        var bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 5000);
                </text>
        }
    </script>
}