@page
@model PetCare.WebApp.Pages.Storage.IndexModel
@{
    ViewData["Title"] = "Storage";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Storage Management</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Medication</th>
                    <th class="text-center">Current Stock</th>
                    <th class="text-center">Reorder Level</th>
                    <th class="text-center">Status</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StockItems)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@item.MedicationName</td>

                        <td class="text-center fs-5 font-monospace">
                            @item.CurrentStock
                        </td>

                        <td class="text-center text-muted">
                            <small>Min: @item.ReorderLevel</small>
                        </td>

                        <td class="text-center">
                            @if (item.CurrentStock == 0)
                            {
                                <span class="badge bg-danger">Critical (Empty)</span>
                            }
                            else if (item.CurrentStock <= item.ReorderLevel)
                            {
                                <span class="badge bg-warning text-dark">Low Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-success">OK</span>
                            }
                        </td>

                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-outline-secondary me-1"
                                    onclick="loadHistory(@item.MedicationId, '@item.MedicationName')"
                                    title="View History">
                                <i class="bi bi-clock-history"></i>
                            </button>

                            <button class="btn btn-sm btn-success me-1"
                                    data-bs-toggle="modal" data-bs-target="#adjustStockModal"
                                    data-id="@item.MedicationId" data-name="@item.MedicationName" data-type="Add">
                                <i class="bi bi-plus-lg"></i> Shipment
                            </button>

                            <button class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal" data-bs-target="#adjustStockModal"
                                    data-id="@item.MedicationId" data-name="@item.MedicationName" data-type="Remove">
                                <i class="bi bi-dash-lg"></i> Correction
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="adjustStockModal" tabindex="-1">
    <div class="modal-dialog">
        <form method="post" asp-page-handler="AdjustStock" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adjustModalTitle">Adjust Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="TransactionInput.MedicationId" id="adjustMedicationId" />
                <input type="hidden" asp-for="TransactionType" id="adjustType" />

                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input asp-for="TransactionInput.QuantityChange" type="number" min="1" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Reason / Note</label>
                    <input asp-for="TransactionInput.Reason" class="form-control" placeholder="e.g., Invoice #123 or Broken bottle" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Transaction</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="historyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transaction History: <span id="historyMedName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <table class="table table-sm table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Date</th>
                            <th>Change</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody id="historyTableBody">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var adjustModal = document.getElementById('adjustStockModal');
        adjustModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            var type = button.getAttribute('data-type'); //"Add" or "Remove"

            document.getElementById('adjustMedicationId').value = id;
            document.getElementById('adjustType').value = type;

            var title = type === 'Add' ? 'Incoming Shipment' : 'Stock Correction';
            document.getElementById('adjustModalTitle').textContent = title + ": " + name;
        });

        function loadHistory(medicationId, medicationName) {
            document.getElementById('historyMedName').textContent = medicationName;

            var tbody = document.getElementById('historyTableBody');
            tbody.innerHTML = '<tr><td colspan="3" class="text-center p-3">Loading...</td></tr>';

            var modal = new bootstrap.Modal(document.getElementById('historyModal'));
            modal.show();

            fetch(`?handler=History&medicationId=${medicationId}`)
                .then(response => response.json())
                .then(data => {
                    tbody.innerHTML = '';

                    if (data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="3" class="text-center text-muted p-3">No transactions found.</td></tr>';
                        return;
                    }

                    data.forEach(item => {
                        var date = new Date(item.timestamp).toLocaleString();

                        var changeClass = item.quantityChange > 0 ? 'text-success' : 'text-danger';
                        var changeSign = item.quantityChange > 0 ? '+' : '';

                        var row = `
                            <tr>
                                <td class="ps-3 small">${date}</td>
                                <td class="fw-bold ${changeClass}">${changeSign}${item.quantityChange}</td>
                                <td>${item.reason}</td>
                            </tr>
                        `;
                        tbody.innerHTML += row;
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    tbody.innerHTML = '<tr><td colspan="3" class="text-danger text-center">Error loading history.</td></tr>';
                });
        }
    </script>
}