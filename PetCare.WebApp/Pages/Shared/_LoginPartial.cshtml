@using Microsoft.AspNetCore.Identity
@using PetCare.Core.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                    <i class="bi bi-person-fill"></i>
                </div>
                <span class="fw-bold me-1">@User.Identity?.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear me-2"></i> Account settings
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    }
    else
    {
        <a class="btn btn-primary btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Register</a>
    }
</div>