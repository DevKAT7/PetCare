<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetCare</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="d-flex-wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-brand">
                    <i class="bi bi-hospital-fill me-2"></i> PetCare
                </a>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-page="/Index" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    <li>
                        <a asp-page="/Calendar/Calendar" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/Calendar/Calendar" ? "active" : "")">
                            <i class="bi bi-calendar-event"></i> Calendar
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <i class="bi bi-people"></i> Patients
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-box-seam"></i> Storage
                        </a>
                    </li>
                }
                @if (User.IsInRole("Employee"))
                {
                    <li>
                        <a asp-page="/Employee/MySchedule" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/Employee/MySchedule" ? "active" : "")">
                            <i class="bi bi-calendar-week"></i> My Schedule
                        </a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="mt-4 px-3 text-uppercase small text-white-50">Administration</li>
                    <li>
                        <a asp-area="" asp-page="/Admin/Vets/Index"
                           class="@(ViewContext.RouteData.Values["page"]?.ToString().Contains("/Admin/Vets/Index") == true ? "active" : "")">
                            <i class="bi bi-person-badge"></i> List of vets
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/Admin/Vets/CreateVet"
                           class="@(ViewContext.RouteData.Values["page"]?.ToString().Contains("/Admin/Vets/CreateVet") == true ? "active" : "")">
                            <i class="bi bi-plus-circle"></i> Add new vet
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <div id="content">
            <nav class="top-navbar">
                <button type="button" id="sidebarCollapse" class="btn btn-outline-secondary d-md-none">
                    <i class="bi bi-list"></i>
                </button>

                <h4 class="m-0 text-muted">@ViewData["Title"]</h4>

                <div class="user-area">
                    <partial name="_LoginPartial" />
                </div>
            </nav>

            <div class="p-4">
                @RenderBody()
            </div>

            <footer class="text-center text-muted mt-auto py-3 small">
                &copy; 2025 - PetCare.WebApp
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>