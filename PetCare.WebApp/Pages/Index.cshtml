@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-primary h-100">
            <div class="card-body">
                <div class="text-muted small text-uppercase fw-bold">Appointments Today</div>
                <div class="d-flex align-items-center justify-content-between mt-2">
                    <h2 class="mb-0">@Model.Data.AppointmentsTodayCount</h2>
                    <i class="bi bi-calendar-check fs-1 text-primary opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-success h-100">
            <div class="card-body">
                <div class="text-muted small text-uppercase fw-bold">Today's Revenue</div>
                <div class="d-flex align-items-center justify-content-between mt-2">
                    <h2 class="mb-0">@Model.Data.TodayRevenue.ToString("C0")</h2>
                    <i class="bi bi-currency-dollar fs-1 text-success opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-danger h-100">
            <div class="card-body">
                <div class="text-muted small text-uppercase fw-bold">Low Stock Items</div>
                <div class="d-flex align-items-center justify-content-between mt-2">
                    <h2 class="mb-0">@Model.Data.LowStockItems.Count</h2>
                    <i class="bi bi-capsule fs-1 text-danger opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="d-grid gap-2 h-100">
            <a asp-page="/Appointments/Create" class="btn btn-primary"><i class="bi bi-plus-lg me-2"></i>New Appointment</a>
            <a asp-page="/Patients/Create" class="btn btn-outline-secondary"><i class="bi bi-paw me-2"></i>New Patient</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Upcoming Schedule</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Time</th>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visit in Model.Data.UpcomingAppointments)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@visit.Time.ToShortTimeString()</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-1 me-2 border d-flex justify-content-center align-items-center" style="width:32px;height:32px;">
                                            <i class="bi bi-paw small"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@visit.PetName</div>
                                            <small class="text-muted">@visit.PetSpecies</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Dr. @visit.VetName</td>
                                <td>
                                    @if (visit.Status == Core.Enums.AppointmentStatus.Confirmed)
                                    {
                                        <span class="badge bg-primary">Confirmed</span>
                                    }
                                    else if (visit.Status == Core.Enums.AppointmentStatus.Scheduled)
                                    {

                                        <span class="badge bg-warning text-dark">Waiting</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">@visit.Status</span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    <a asp-page="/Appointments/Details" asp-route-id="@visit.AppointmentId" class="btn btn-sm btn-light">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white py-3 border-bottom border-danger">
                <h5 class="mb-0 text-danger"><i class="bi bi-exclamation-circle me-2"></i>Unpaid Invoices</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var inv in Model.Data.OverdueInvoices)
                {
                    <a asp-page="/Invoices/Details" asp-route-id="@inv.InvoiceId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                        <div>
                            <div class="fw-bold">@inv.OwnerName</div>
                            <small class="text-muted">Due: @inv.DueDate.ToShortDateString()</small>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold text-danger">@inv.Amount.ToString("C")</div>
                            <small class="text-muted">#@inv.InvoiceNumber</small>
                        </div>
                    </a>
                }
                @if (!Model.Data.OverdueInvoices.Any())
                {
                    <div class="text-center py-4 text-muted">No overdue invoices! 🎉</div>
                }
            </div>
        </div>
    </div>
</div>
