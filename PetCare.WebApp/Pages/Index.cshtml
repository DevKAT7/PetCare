@page
@using PetCare.Core.Enums
@using PetCare.WebApp.Helpers
@model IndexModel
@{
    ViewData["Title"] = @Html.T("Dashboard_Title");
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-primary h-100">
            <div class="card-body">
                <div class="text-muted small text-uppercase fw-bold">@Html.T("Dashboard_AppointmentsCard")</div>
                <div class="d-flex align-items-center justify-content-between mt-2">
                    <h2 class="mb-0">@Model.Data.AppointmentsTodayCount</h2>
                    <i class="bi bi-calendar-check fs-1 text-primary opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-success h-100">
            <div class="card-body">
                <div class="text-muted small text-uppercase fw-bold">@Html.T("Dashboard_RevenueCard")</div>
                <div class="d-flex align-items-center justify-content-between mt-2">
                    <h2 class="mb-0">@Model.Data.TodayRevenue.ToString("C0")</h2>
                    <i class="bi bi-currency-dollar fs-1 text-success opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-info h-100">
            <div class="card-body">
                <div class="text-muted small text-uppercase fw-bold">@Html.T("Dashboard_NewPatientsCard")</div>
                <div class="d-flex align-items-center justify-content-between mt-2">
                    <h2 class="mb-0">@Model.Data.NewPatientsThisMonth</h2>
                    <i class="bi bi-heart-pulse fs-1 text-info opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="d-grid gap-2 h-100 align-content-center">
            <a asp-page="/Appointments/CreateAppointment" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>New Appointment
            </a>
            <a asp-page="/Pets/CreatePet" class="btn btn-outline-secondary shadow-sm">
                <i class="fa-solid fa-paw me-2"></i>New Patient
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Upcoming Schedule</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Time / Date</th>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visit in Model.Data.UpcomingAppointments)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@visit.Time.ToShortTimeString()</div>
                                    @if (visit.Time.Date == DateTime.Today)
                                    {
                                        <small class="text-success fw-bold" style="font-size: 0.75rem;">TODAY</small>
                                    }
                                    else if (visit.Time.Date == DateTime.Today.AddDays(1))
                                    {
                                        <small class="text-warning fw-bold" style="font-size: 0.75rem;">TOMORROW</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted" style="font-size: 0.75rem;">@visit.Time.ToString("dd MMM (ddd)")</small>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-3 border d-flex justify-content-center align-items-center" style="width:40px;height:40px;">
                                            <i class="fa-solid fa-paw text-secondary fs-5"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@visit.PetName</div>
                                            <small class="text-muted">@visit.PetSpecies</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Dr @visit.VetName</td>
                                <td>
                                    @switch (visit.Status)
                                    {
                                        case AppointmentStatus.Scheduled:
                                            <span class="badge badge-scheduled px-3">Scheduled</span>
                                            break;
                                        case AppointmentStatus.Confirmed:
                                            <span class="badge bg-warning bg-opacity-10 text-warning border border-warning px-3">Confirmed</span>
                                            break;
                                        case AppointmentStatus.Completed:
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-3">Completed</span>
                                            break;
                                        case AppointmentStatus.Cancelled:
                                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary px-3">@visit.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    @if (visit.Status != AppointmentStatus.Cancelled)
                                    {
                                        <a asp-page="/Appointments/Details" asp-route-id="@visit.AppointmentId" class="btn btn-sm btn-light border">Details</a>
                                    }                                  
                                </td>
                            </tr>
                        }
                        @if (!Model.Data.UpcomingAppointments.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                                    No upcoming appointments found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white py-3 border-bottom border-danger">
                <h5 class="mb-0 text-danger"><i class="bi bi-exclamation-circle me-2"></i>Overdue Invoices</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var inv in Model.Data.OverdueInvoices)
                {
                    <a asp-page="/Invoices/Details" asp-route-id="@inv.InvoiceId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                        <div>
                            <div class="fw-bold text-dark">@inv.OwnerName</div>
                            <small class="text-danger fw-bold">Due: @inv.DueDate.ToShortDateString()</small>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold text-danger">@inv.Amount.ToString("C")</div>
                            <small class="text-muted" style="font-size: 0.75rem;">#@inv.InvoiceNumber</small>
                        </div>
                    </a>
                }
                @if (!Model.Data.OverdueInvoices.Any())
                {
                    <div class="text-center py-4 text-muted small">
                        <i class="bi bi-check-circle text-success fs-4 d-block mb-1"></i>
                        No overdue invoices.
                    </div>
                }
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white py-3 border-bottom border-primary">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary"><i class="bi bi-hourglass-split me-2"></i>Pending Payment</h5>
                    <a asp-page="/Invoices/Index" asp-route-status="unpaid" class="btn btn-sm btn-outline-primary py-0" style="font-size: 0.75rem;">View All</a>
                </div>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var inv in Model.Data.CurrentUnpaidInvoices)
                {
                    <a asp-page="/Invoices/Details" asp-route-id="@inv.InvoiceId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                        <div>
                            <div class="fw-bold text-dark">@inv.OwnerName</div>
                            <small class="text-muted">Due: @inv.DueDate.ToShortDateString()</small>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold text-dark">@inv.Amount.ToString("C")</div>
                            <small class="text-muted" style="font-size: 0.75rem;">#@inv.InvoiceNumber</small>
                        </div>
                    </a>
                }
                @if (!Model.Data.CurrentUnpaidInvoices.Any())
                {
                    <div class="text-center py-4 text-muted small">All invoices paid!</div>
                }
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white py-3 border-bottom border-warning">
                <h5 class="mb-0 text-warning text-opacity-75" style="color: #fd7e14 !important;">
                    <i class="bi bi-capsule me-2"></i>Low Stock Alert
                </h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var med in Model.Data.LowStockMedications)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center px-4 py-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill text-warning me-3"></i>
                            <div class="fw-bold text-dark">@med.MedicationName</div>
                        </div>
                        <span class="badge bg-warning text-dark rounded-pill">@med.Quantity left</span>
                    </div>
                }
                @if (!Model.Data.LowStockMedications.Any())
                {
                    <div class="text-center py-4 text-muted small">
                        <i class="bi bi-box-seam text-success fs-4 d-block mb-1"></i>
                        Inventory looks good.
                    </div>
                }
            </div>
        </div>
    </div>
</div>