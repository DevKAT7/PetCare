@page "{id:int}"
@model PetCare.WebApp.Pages.Admin.Vets.DetailsModel
@{
    ViewData["Title"] = "Vet Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Veterinarian Profile</h2>
            <p class="text-muted mb-0">View detailed information and employment data.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-page="./EditVet" asp-route-id="@Model.Vet.VetId" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit Profile
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center pt-5 pb-4">
                    <div class="mb-3 d-flex justify-content-center">
                        @if (!string.IsNullOrEmpty(Model.Vet.ProfilePictureUrl))
                        {
                            <img src="@Model.Vet.ProfilePictureUrl" alt="@Model.Vet.FullName"
                                 class="rounded-circle shadow-sm border p-1 object-fit-cover"
                                 style="width: 150px; height: 150px;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-light text-secondary d-flex align-items-center justify-content-center shadow-sm border"
                                 style="width: 150px; height: 150px; font-size: 3.5rem;">
                                @((Model.Vet.FirstName?.FirstOrDefault() ?? '?'))@((Model.Vet.LastName?.FirstOrDefault() ?? '?'))
                            </div>
                        }
                    </div>

                    <h3 class="fw-bold mb-1">@Model.Vet.FullName</h3>
                    <p class="text-muted mb-3">Veterinarian</p>

                    <div class="mb-4">
                        @foreach (var spec in Model.Vet.Specializations)
                        {
                            <span class="badge bg-info text-dark me-1 mb-1">@spec</span>
                        }
                    </div>

                    <div class="d-grid gap-2 col-10 mx-auto">
                        <a asp-page="/ManageSchedule" asp-route-vetId="@Model.Vet.VetId" class="btn btn-petcare-outline">
                            <i class="bi bi-calendar-week me-2"></i> Manage Schedule
                        </a>
                    </div>
                </div>

                <div class="card-footer bg-white border-top py-3 text-start">
                    <ul class="list-unstyled mb-0 px-2">
                        <li class="mb-3 d-flex align-items-center">
                            <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <div class="text-break">
                                <small class="text-muted d-block">Email Address</small>
                                <a href="mailto:@Model.Vet.Email" class="text-decoration-none text-dark fw-medium">
                                    @Model.Vet.Email
                                </a>
                            </div>
                        </li>
                        <li class="mb-3 d-flex align-items-center">
                            <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                <i class="bi bi-telephone"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Phone Number</small>
                                <span class="fw-medium">@Model.Vet.PhoneNumber</span>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                <i class="bi bi-geo-alt"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Home Address</small>
                                <span class="fw-medium">
                                    @(!string.IsNullOrEmpty(Model.Vet.Address) ? Model.Vet.Address : "—")
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 text-primary"><i class="bi bi-person-lines-fill me-2"></i>Professional Summary</h5>
                </div>
                <div class="card-body">

                    <div class="mb-4">
                        <label class="text-muted small fw-bold text-uppercase">Description / Bio</label>
                        <p class="mt-1 text-secondary" style="white-space: pre-line;">
                            @(!string.IsNullOrEmpty(Model.Vet.Description) ? Model.Vet.Description : "No description provided.")
                        </p>
                    </div>

                    <h6 class="text-muted small fw-bold text-uppercase mb-3 border-bottom pb-2">Employment Details</h6>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded border h-100 d-flex flex-column justify-content-center">
                                <div class="text-muted small mb-1">License Number</div>
                                <div class="fs-5 fw-bold text-dark font-monospace">
                                    <i class="bi bi-card-heading me-2 text-primary"></i>
                                    @(!string.IsNullOrEmpty(Model.Vet.LicenseNumber) ? Model.Vet.LicenseNumber : "—")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded border h-100 d-flex flex-column justify-content-center">
                                <div class="text-muted small mb-1">PESEL</div>
                                <div class="fs-5 fw-bold text-dark font-monospace">
                                    @Model.Vet.Pesel
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="p-3 border rounded h-100 text-center">
                                <div class="text-muted small mb-1">Hired On</div>
                                <div class="fw-bold">@Model.Vet.HireDate.ToString("dd.MM.yyyy")</div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="p-3 border rounded h-100 text-center">
                                <div class="text-muted small mb-1">Career Started</div>
                                <div class="fw-bold">@Model.Vet.CareerStartDate.ToString("dd.MM.yyyy")</div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="p-3 border rounded h-100 text-center">
                                <div class="text-muted small mb-1">Experience</div>
                                <div class="fw-bold text-success">@Model.Vet.YearsOfExperience Years</div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card shadow-sm border-0 opacity-75">
                <div class="card-body text-center py-4">
                    <small class="text-muted">More statistics regarding visits and patients will appear here.</small>
                </div>
            </div>
        </div>
    </div>
</div>