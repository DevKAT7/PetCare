@page 
@model PetCare.WebApp.Pages.Admin.Vets.EditVetModel
@{
    ViewData["Title"] = "Edit Vet";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow-sm border-0 mb-5">

        <div class="card-header text-white py-3">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Vet Details</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <input asp-for="Id" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 shadow-sm"></div>

                <h6 class="text-muted text-uppercase small fw-bold mb-3 border-bottom pb-2">
                    <i class="bi bi-envelope-paper me-1"></i> Contact Information
                </h6>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Input.Email" class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control" type="email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.PhoneNumber" class="form-label fw-bold">Phone Number <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                </div>

                <h6 class="text-muted text-uppercase small fw-bold mb-3 mt-4 border-bottom pb-2">
                    <i class="bi bi-person-badge me-1"></i> Personal Information
                </h6>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Input.FirstName" class="form-label fw-bold">First Name <span class="text-danger">*</span></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.LastName" class="form-label fw-bold">Last Name <span class="text-danger">*</span></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Address" class="form-label fw-bold">Home Address <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-geo-alt"></i></span>
                        <input asp-for="Input.Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.Address" class="text-danger small"></span>
                </div>

                <h6 class="text-muted text-uppercase small fw-bold mb-3 mt-4 border-bottom pb-2">
                    <i class="bi bi-briefcase me-1"></i> Professional Information
                </h6>

                <div class="mb-3">
                    <label asp-for="Input.ProfilePictureUrl" class="form-label fw-bold">Profile Picture URL</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-link-45deg"></i></span>
                        <input asp-for="Input.ProfilePictureUrl" class="form-control" placeholder="https://..." />
                    </div>
                    <span asp-validation-for="Input.ProfilePictureUrl" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Description" class="form-label fw-bold">Description / Bio</label>
                    <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Input.Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Specializations</label>

                    <div class="p-2">
                        <div class="row g-2">
                            @if (ViewBag.Specializations != null)
                            {
                                var specs = (IEnumerable<SelectListItem>)ViewBag.Specializations;
                                var i = 0;

                                @foreach (var item in specs)
                                {
                                    bool isChecked = item.Selected;

                                    if (!isChecked && Model.Input.SpecializationIds != null && int.TryParse(item.Value, out int val))
                                    {
                                        if (Model.Input.SpecializationIds.Contains(val))
                                        {
                                            isChecked = true;
                                        }
                                    }

                                    <div class="col-6 col-sm-4 col-lg-3">
                                        <div class="card h-100 p-1 position-relative shadow-sm border-light bg-light hover-shadow d-flex flex-row align-items-center">

                                            <input class="form-check-input m-0 me-2" type="checkbox"
                                                   name="Input.SpecializationIds"
                                                   value="@item.Value"
                                                   id="spec_edit_@i"
                                                   @(isChecked ? "checked" : "")>

                                            <label class="form-check-label small fw-bold stretched-link text-secondary lh-1" for="spec_edit_@i">
                                                @item.Text
                                            </label>
                                        </div>
                                    </div>
                                    i++;
                                }
                            }
                            else
                            {
                                <div class="text-muted small">No specializations available.</div>
                            }
                        </div>
                    </div>
                    <span asp-validation-for="Input.SpecializationIds" class="text-danger small"></span>
                </div>

                <h6 class="text-muted text-uppercase small fw-bold mb-3 mt-4 border-bottom pb-2">
                    <i class="bi bi-lock"></i> Account Credentials
                </h6>
                <div class="col-md-12 mt-2">
                    <div class="d-flex align-items-center p-3 bg-light border rounded">
                        <div class="flex-grow-1">
                            <h6 class="mb-1 fw-bold"><i class="bi bi-shield-lock me-2"></i>Security & Access</h6>
                            <small class="text-muted">If the employee forgot their password, you can generate a new one here.</small>
                        </div>
                        <div>
                            <a asp-page="./ResetPassword" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm fw-bold">
                                <i class="bi bi-key me-1"></i> Reset Password
                            </a>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between pt-3 border-top">
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4 fw-bold">
                        <i class="bi bi-check-lg me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}