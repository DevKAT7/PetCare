@page
@model PetCare.WebApp.Pages.Admin.Vets.IndexModel
@{
    ViewData["Title"] = "Veterinarians List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Veterinarians</h2>
    <a asp-page="CreateVet" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Vet
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-4">Veterinarian</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Specializations</th>
                        <th scope="col">Experience</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Vets.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                No veterinarians found. Click "Add New Vet" to create one.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var vet in Model.Vets)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(vet.ProfilePictureUrl))
                                        {
                                            <img src="@vet.ProfilePictureUrl" alt="@vet.FullName"
                                                 class="rounded-circle me-3 object-fit-cover"
                                                 style="width: 48px; height: 48px;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle me-3 bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="width: 48px; height: 48px; font-size: 1.2rem;">
                                                @vet.FirstName[0]@vet.LastName[0]
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@vet.FullName</div>
                                            <small class="text-muted">ID: @vet.VetId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vet.PhoneNumber))
                                    {
                                        <div><i class="bi bi-telephone me-1"></i> @vet.PhoneNumber</div>
                                    }
                                </td>
                                <td>
                                    @foreach (var spec in vet.Specializations)
                                    {
                                        <span class="badge bg-info text-dark me-1">@spec</span>
                                    }
                                </td>
                                <td>
                                    @vet.YearsOfExperience years
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-page="/ManageSchedule"
                                           asp-route-vetId="@vet.VetId"
                                           class="btn btn-primary btn-sm btn-rounded text-white">
                                            <i class="bi bi-calendar-week"></i> Schedule
                                        </a>
                                        <a asp-page="EditVet" asp-route-id="@vet.VetId" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-vet-id="@vet.VetId"
                                                data-vet-name="@vet.FullName">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteVetName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" id="deleteVetId" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            // Przycisk, który otworzył modal
            var button = event.relatedTarget;

            // Pobierz dane z atrybutów data-* przycisku
            var vetId = button.getAttribute('data-vet-id');
            var vetName = button.getAttribute('data-vet-name');

            // Znajdź elementy wewnątrz modala
            // Upewnij się, że te ID pasują do HTML powyżej!
            var modalNamePlaceholder = deleteModal.querySelector('#deleteVetName');
            var modalIdInput = deleteModal.querySelector('#deleteVetId');

            // Przypisz wartości
            modalNamePlaceholder.textContent = vetName;
            modalIdInput.value = vetId;
        });
    </script>
}