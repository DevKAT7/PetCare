@page
@model PetCare.WebApp.Pages.Admin.Vets.IndexModel
@{
    ViewData["Title"] = "Vets List";

    string GetNextSort(string column)
    {
        if (Model.SortColumn == column)
        {
            return Model.SortDirection == "asc" ? "desc" : "asc";
        }
        return "asc";
    }

    string GetSortIcon(string column)
    {
        if (Model.SortColumn != column) return "text-muted opacity-25";
        return Model.SortDirection == "asc" ? "bi-arrow-up-short" : "bi-arrow-down-short";
    }
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Vets</h2>
    <a asp-page="CreateVet" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Vet
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body bg-light">
        <form method="get" class="row g-3">
            <input type="hidden" asp-for="SortColumn" />
            <input type="hidden" asp-for="SortDirection" />

            <div class="col-md-4">
                <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Search by Name or PESEL...">
            </div>

            <div class="col-md-3">
                <select asp-for="SelectedSpecializationId" asp-items="@Model.SpecializationOptions" class="form-select">
                    <option value="">-- All Specializations --</option>
                </select>
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="submit"
                        class="btn btn-secondary btn-sm flex-grow-1 d-flex align-items-center justify-content-center"
                        title="Apply filters">
                    <i class="bi bi-funnel me-2"></i> Filter
                </button>
                <a asp-page="./Index" 
                   class="btn btn-outline-secondary btn-sm flex-grow-1 d-flex align-items-center justify-content-center"
                   title="Clear filters">
                    Clear
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-4">
                            <a asp-page="./Index"
                               asp-route-sortColumn="LastName"
                               asp-route-sortDirection="@GetNextSort("LastName")"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-selectedSpecializationId="@Model.SelectedSpecializationId"
                               class="text-decoration-none text-dark d-flex align-items-center">
                                Vet <i class="bi fs-5 ms-1 @GetSortIcon("LastName")"></i>
                            </a>
                        </th>
                        <th scope="col">Pesel</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Specializations</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Vets.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                No vets found. Click "Add New Vet" to create one.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var vet in Model.Vets)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(vet.ProfilePictureUrl))
                                        {
                                            <img src="@vet.ProfilePictureUrl" alt="@vet.FullName"
                                                 class="rounded-circle me-3 object-fit-cover"
                                                 style="width: 48px; height: 48px;">
                                        }
                                        else
                                        {
                                            var firstInitial = !string.IsNullOrEmpty(vet.FirstName) ? vet.FirstName[0].ToString() : string.Empty;
                                            var lastInitial = !string.IsNullOrEmpty(vet.LastName) ? vet.LastName[0].ToString() : string.Empty;

                                            <div class="rounded-circle me-3 bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="width: 48px; height: 48px; font-size: 1.2rem;">
                                                @firstInitial@lastInitial
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@vet.FullName</div>
                                            <small class="text-muted">ID: @vet.VetId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                        <div>@vet.Pesel</div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vet.Email))
                                    {
                                        <div><i class="bi bi-envelope"></i> @vet.Email</div>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vet.PhoneNumber))
                                    {
                                        <div><i class="bi bi-telephone me-1"></i> @vet.PhoneNumber</div>
                                    }
                                </td>
                                <td>
                                    @if (vet.Specializations != null && vet.Specializations.Any())
                                    {
                                        @foreach (var spec in vet.Specializations)
                                        {
                                            <span class="badge bg-info text-dark me-1">@spec</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex gap-1 justify-content-end">
                                        <a asp-page="/ManageSchedule"
                                           asp-route-vetId="@vet.VetId"
                                           class="btn btn-primary btn-sm text-white d-flex align-items-center">
                                            <i class="bi bi-calendar-week me-2"></i> Schedule
                                        </a>
                                        <a asp-page="Details" asp-route-id="@vet.VetId" 
                                            class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center"><i class="bi bi-eye"></i></a>
                                        <a asp-page="EditVet" asp-route-id="@vet.VetId" 
                                            class="btn btn-sm btn-outline-primary d-flex align-items-center justify-content-center" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger d-flex align-items-center justify-content-center"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-vet-id="@vet.VetId"
                                                data-vet-name="@vet.FullName">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteVetName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" id="deleteVetId" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) 
        {
            var button = event.relatedTarget;

            var vetId = button.getAttribute('data-vet-id');
            var vetName = button.getAttribute('data-vet-name');

            var modalNamePlaceholder = deleteModal.querySelector('#deleteVetName');
            var modalIdInput = deleteModal.querySelector('#deleteVetId');

            modalNamePlaceholder.textContent = vetName;
            modalIdInput.value = vetId;
        });
    </script>
}