@page "{id:int}"
@model PetCare.WebApp.Pages.Admin.Vets.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white py-3">
            <h4 class="mb-0"><i class="bi bi-shield-exclamation me-2"></i>Admin Password Reset</h4>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
                <div>
                    You are resetting the password for <strong>@Model.VetName</strong>.<br />
                    The user will be forced to change this password immediately after logging in.
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Input.UserId" />
                <input type="hidden" asp-for="Input.VetId" />
                <input type="hidden" asp-for="VetName" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.NewPassword" class="form-label fw-bold">New Temporary Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-key"></i></span>
                        <input asp-for="Input.NewPassword" class="form-control" type="password" placeholder="•••••••" />
                    </div>
                    <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-check2-square"></i></span>
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="•••••••" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between pt-3 border-top">
                    <a asp-page="./EditVet" asp-route-id="@Model.Input.VetId" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4 fw-bold">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}