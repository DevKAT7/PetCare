@page
@model PetCare.WebApp.Pages.Admin.Users.ManageRolesModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h3>Manage Roles for @Model.TargetUser.Email</h3>
<hr />

<form method="post">
    <input type="hidden" name="userId" value="@Model.TargetUser.Id" />

    <div class="card p-3">
        <h5>Select Permission Groups:</h5>
        @for (int i = 0; i < Model.RolesList.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model.RolesList[i].RoleName" />
                <input asp-for="@Model.RolesList[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">
                    @Model.RolesList[i].RoleName
                </label>
            </div>
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
