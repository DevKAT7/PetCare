@page
@model PetCare.WebApp.Areas.Identity.Pages.Admin.Vets.IndexModel
@{
    ViewData["Title"] = "Veterinarians List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Veterinarians</h2>
    <a asp-page="CreateVet" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Vet
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-4">Veterinarian</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Specializations</th>
                        <th scope="col">Experience</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Vets.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                No veterinarians found. Click "Add New Vet" to create one.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var vet in Model.Vets)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(vet.ProfilePictureUrl))
                                        {
                                            <img src="@vet.ProfilePictureUrl" alt="@vet.FullName"
                                                 class="rounded-circle me-3 object-fit-cover"
                                                 style="width: 48px; height: 48px;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle me-3 bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="width: 48px; height: 48px; font-size: 1.2rem;">
                                                @vet.FirstName[0]@vet.LastName[0]
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@vet.FullName</div>
                                            <small class="text-muted">ID: @vet.VetId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vet.PhoneNumber))
                                    {
                                        <div><i class="bi bi-telephone me-1"></i> @vet.PhoneNumber</div>
                                    }
                                </td>
                                <td>
                                    @foreach (var spec in vet.Specializations)
                                    {
                                        <span class="badge bg-info text-dark me-1">@spec</span>
                                    }
                                </td>
                                <td>
                                    @vet.YearsOfExperience years
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-page="EditVet" asp-route-id="@vet.VetId" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>