@page
@model PetCare.WebApp.Areas.Identity.Pages.Admin.Users.CreateVetModel
@{
    ViewData["Title"] = "Dodaj Weterynarza";
}

<h2>Dodaj Nowego Weterynarza</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Dane konta</h4>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" type="email" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Hasło tymczasowe</label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <hr />
            <h4>Dane osobowe</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.FirstName" class="form-label">Imię</label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.LastName" class="form-label">Nazwisko</label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Pesel" class="form-label">PESEL</label>
                <input asp-for="Input.Pesel" class="form-control" />
                <span asp-validation-for="Input.Pesel" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label">Numer telefonu</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Address" class="form-label">Adres zamieszkania</label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <hr />
            <h4>Informacje zawodowe</h4>
            <div class="mb-3">
                <label asp-for="Input.LicenseNumber" class="form-label">Numer licencji (PWZ)</label>
                <input asp-for="Input.LicenseNumber" class="form-control" />
                <span asp-validation-for="Input.LicenseNumber" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.HireDate" class="form-label">Data zatrudnienia</label>
                    <input asp-for="Input.HireDate" class="form-control" type="date" />
                    <span asp-validation-for="Input.HireDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.CareerStartDate" class="form-label">Data rozp. kariery</label>
                    <input asp-for="Input.CareerStartDate" class="form-control" type="date" />
                    <span asp-validation-for="Input.CareerStartDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ProfilePictureUrl" class="form-label">URL zdjęcia profilowego</label>
                <input asp-for="Input.ProfilePictureUrl" class="form-control" />
                <span asp-validation-for="Input.ProfilePictureUrl" class="text-danger"></span>
                <small class="text-muted">Wklej link do zdjęcia (lub w przyszłości dodaj upload plików).</small>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label">Opis / O sobie</label>
                <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.SpecializationIds" class="form-label">Specjalizacje</label>
                <select asp-for="Input.SpecializationIds" class="form-control" asp-items="ViewBag.Specializations" multiple>
                    <option disabled>Wybierz specjalizacje (przytrzymaj Ctrl, aby wybrać więcej)</option>
                </select>
                <span asp-validation-for="Input.SpecializationIds" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Utwórz konto Weterynarza</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}