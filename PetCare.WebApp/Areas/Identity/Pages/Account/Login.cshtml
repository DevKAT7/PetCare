@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-white text-center py-4 rounded-top-3">
                    <h2 class="h4 mb-1 fw-bold">
                        <i class="bi bi-paw-fill me-2"></i>PetCare
                    </h2>
                    <small class="opacity-75">Welcome back! Please login.</small>
                </div>

                <div class="card-body p-4">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label text-muted">
                                    <i class="bi bi-envelope me-1"></i> Email address
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label text-muted">
                                    <i class="bi bi-lock me-1"></i> Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label text-secondary small" asp-for="Input.RememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small">Forgot password?</a>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button id="login-submit" type="submit" class="btn btn-lg btn-primary fw-bold">
                                    Log in <i class="bi bi-box-arrow-in-right ms-2"></i>
                                </button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>

