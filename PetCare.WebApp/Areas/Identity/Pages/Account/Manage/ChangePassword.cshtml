@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card shadow-lg border-0 rounded-3 mt-4">

            <div class="card-header-blue text-white text-center py-4 rounded-top-3">
                <h3 class="h4 mb-1 fw-bold">
                    <i class="bi bi-shield-lock-fill me-2"></i>Security Check
                </h3>
                <small class="opacity-75 text-white-50">Please update your password to continue.</small>
            </div>

            <div class="card-body p-4">
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Current password" />
                        <label asp-for="Input.OldPassword" class="form-label text-muted">
                            <i class="bi bi-key me-1"></i> Current Password
                        </label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New password" />
                        <label asp-for="Input.NewPassword" class="form-label text-muted">
                            <i class="bi bi-lock me-1"></i> New Password
                        </label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label text-muted">
                            <i class="bi bi-check-circle me-1"></i> Confirm New Password
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg btn-primary fw-bold fs-6">
                            Update Password <i class="bi bi-arrow-right-circle ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3 text-muted small">
            <i class="bi bi-info-circle me-1"></i>
            Use a strong password with letters, numbers & symbols.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}